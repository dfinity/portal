{
  "container": {
    "hidden": {
      "opacity": 0,
      "transition": {
        "duration": 1
      }
    },
    "show": {
      "opacity": 1,
      "transition": {
        "staggerChildren": 0.1
      }
    }
  },
  "item": {
    "hidden": {
      "opacity": 0,
      "y": 30
    },
    "show": {
      "opacity": 1,
      "y": 0,
      "transition": {
        "duration": 0.5
      }
    }
  },
  "fadeIn": {
    "hidden": {
      "opacity": 0
    },
    "show": {
      "opacity": 1,
      "transition": {
        "duration": 0.5
      }
    }
  }
}