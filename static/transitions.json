{
  "container": {
    "hidden": {
      "opacity": 0,
      "transition": {
        "duration": 1
      }
    },
    "show": {
      "opacity": 1,
      "transition": {
        "staggerChildren": 0.1
      }
    }
  },
  "item": {
    "hidden": {
      "opacity": 0,
      "y": 30
    },
    "show": {
      "opacity": 1,
      "y": 0,
      "transition": {
        "duration": 0.5
      }
    }
  },
  "fadeIn": {
    "hidden": {
      "opacity": 0
    },
    "show": {
      "opacity": 1,
      "transition": {
        "duration": 0.5
      }
    }
  },
  "slideInFromLeft": {
    "hidden": {
      "opacity": 0,
      "x": -100
    },
    "show": {
      "opacity": 1,
      "x": 0,
      "transition": {
        "duration": 0.5,
        "ease": [0.3, 0.7, 0, 1]
      }
    }
  },
  "slideInFromRight": {
    "hidden": {
      "opacity": 0,
      "x": 100
    },
    "show": {
      "opacity": 1,
      "x": 0,
      "transition": {
        "duration": 0.5,
        "ease": [0.3, 0.7, 0, 1]
      }
    }
  }
}